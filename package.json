{
  "name": "@ldesign/performance",
  "version": "0.1.0",
  "description": "LDesign 性能优化工具 - 构建分析、性能监控、优化建议",
  "keywords": [
    "ldesign",
    "performance",
    "optimization",
    "vite",
    "web-vitals",
    "bundle-analyzer"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    },
    "./cli": {
      "types": "./es/cli/index.d.ts",
      "import": "./es/cli/index.js",
      "require": "./lib/cli/index.cjs"
    },
    "./analyzers": {
      "types": "./es/analyzers/index.d.ts",
      "import": "./es/analyzers/index.js",
      "require": "./lib/analyzers/index.cjs"
    },
    "./reporters": {
      "types": "./es/reporters/index.d.ts",
      "import": "./es/reporters/index.js",
      "require": "./lib/reporters/index.cjs"
    },
    "./plugins": {
      "types": "./es/plugins/index.d.ts",
      "import": "./es/plugins/index.js",
      "require": "./lib/plugins/index.cjs"
    }
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "unpkg": "./dist/index.min.js",
  "jsdelivr": "./dist/index.min.js",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "es",
    "lib",
    "dist",
    "bin"
  ],
  "bin": {
    "ldesign-performance": "./bin/cli.js"
  },
  "scripts": {
    "build": "ldesign-builder build -f esm,cjs,dts",
    "dev": "ldesign-builder build -f esm,cjs,dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@ldesign/kit": "workspace:*",
    "@ldesign/shared": "workspace:*",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "cli-table3": "^0.6.3",
    "boxen": "^7.1.1",
    "fast-glob": "^3.3.2",
    "gzip-size": "^7.0.0",
    "pretty-bytes": "^6.1.1",
    "rollup-plugin-visualizer": "^5.12.0",
    "web-vitals": "^3.5.0",
    "vite": "^5.0.0"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@types/node": "^20.11.16",
    "typescript": "^5.7.3",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0"
  },
  "peerDependencies": {
    "vite": "^4.0.0 || ^5.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    }
  }
}


